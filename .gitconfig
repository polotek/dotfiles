[color]
    ui = true
[core]
    excludesfile = ~/.gitignore
    editor = "code --wait"
#    autocrlf = input
#    safecrlf = true
[push]
    default = current
[pull]
    ff = only
[alias]
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    l = log -1 --oneline
    s = status
    f = flow
    d = diff
    di = diff --cached
    co = checkout
    ci = commit
    b = branch
[apply]
    whitespace = strip

[rerere]
    enabled = true
